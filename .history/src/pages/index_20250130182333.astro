---
import axios from 'axios';
import Layout from '../layouts/Layout.astro';
let aboutData = {};
let projectsData = [];
try {
const aboutResponse = await axios.get('http://localhost:4000/api/about');
aboutData = aboutResponse.data;

const projectsResponse = await axios.get('http://localhost:3000/api/projects');
projectsData = projectsResponse.data;
} catch (error) {
console.error('Error al consumir la API:', error);
}
---

<Layout tittle="Welcome">
    <main>
        <section class="w-full lg:w-[740px] mx-auto py-40">
        <h1 class="text-white text-5xl font-bold flex justify-center flex-row">Hola! Soy Tomas Scheto.</h1>
        <h2 class="text= 2xl">Soy Desarrolador FullStack y Tester QA</h2>
    </section>
    </main>
</Layout>