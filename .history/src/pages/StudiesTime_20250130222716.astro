---
import Layout from "../layouts/Layout.astro";

const StudiesExp = [
    {
        date: "Enero 2025",
        title: "Diplomatura en Desarrollo Web Full Stack",
        institution: "Global Academy",
        description:
            "Me capacité en el área de desarrollo web frontend y backend, utilizando tecnologías como HTML, CSS, JavaScript, Node.js, Express, MongoDB, React, entre otras.",
    },
    {
        date: "Enero 2025",
        title: "AWS",
        institution: "Coder House",
        description:
            "Adquirí conocimientos sobre computación en la nube, incluyendo seguridad, billing y diseño de arquitecturas de servicios.",
    },
    {
        date: "Diciembre 2024",
        title: "Diplomatura en Backend Java con Spring Boot",
        institution: "Global Academy",
        description:
            "Desarrollo de APIs seguras, autenticación, autorización y pruebas unitarias.",
    }
];
---

<Layout>
  <h1 class="text-3xl font-bold text-center mb-6">Estudios</h1>

  <ol class="relative border-l-2 border-gray-200 dark:border-gray-700 pl-6">
    {StudiesExp.map((study) => (
      <li class="mb-10 ms-4">
        <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
        <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
          {study.date}
        </time>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{study.title}</h3>
        <p class="mb-1 text-base font-normal text-gray-500 dark:text-gray-400">{study.institution}</p>
        <p class="text-base font-normal text-gray-500 dark:text-gray-400">{study.description}</p>
      </li>
    ))}
  </ol>
</Layout>
