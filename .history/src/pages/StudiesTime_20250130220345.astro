---
interface Props {
  date: string;
  title: string;
  institution: string;
  description: string;
}

const { date, title, institution, description } = Astro.props;
---

<div class="relative mx-12 pb-12 grid md:grid-cols-5 md:gap-10">
  <!-- Contenedor de la fecha y el título -->
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-yellow-400 absolute -left-8 text-5xl">&bull;</span>
      <h3 class="text-xl font-bold text-yellow-400">{date}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">{title}</h4>
      <time class="text-sm text-gray-600/80 dark:text-white/80">{date}</time>
    </div>
  </div>

  <!-- Contenedor de la institución y descripción -->
  <div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
    <p>{institution}</p>
    <p>{description}</p>
  </div>
</div>
